{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "web3": "readonly",
    "artifacts": "readonly",
    "contract": "readonly",
    "before": "readonly",
    "after": "readonly",
    "beforeEach": "readonly",
    "afterEach": "readonly",
    "describe": "readonly",
    "context": "readonly",
    "it": "readonly",
    "assert": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true
      }
    ]
  }
}
